<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.5"
        android:background="@color/black"
        android:gravity="center"
        android:textAlignment="textEnd"
        android:textColor="@color/textcolor1"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/maintext"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_weight="1"
        android:background="#000000"
        android:gravity="center"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/textcolor2"
        android:textSize="55sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1.125"
        android:background="@color/black"
        android:weightSum="4">

        <Button
            android:id="@+id/ce"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:foreground="@drawable/ce"
            android:onClick="calculation"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:foreground="@drawable/c"
            android:onClick="calculation"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:foreground="@drawable/delete"
            android:onClick="calculation"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="@drawable/div"
            android:onClick="calculation"
            app:backgroundTint="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1.125"
        android:background="@color/black"
        android:weightSum="4">

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:foreground="@drawable/seven"
            android:onClick="calculation"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:foreground="@drawable/eight"
            android:onClick="calculation"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:foreground="@drawable/nine"
            android:onClick="calculation"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/mul"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="@drawable/mul"
            android:onClick="calculation"
            app:backgroundTint="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1.125"
        android:background="@color/black"
        android:weightSum="4">

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:foreground="@drawable/four"
            android:onClick="calculation"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:foreground="@drawable/five"
            android:onClick="calculation"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:foreground="@drawable/six"
            android:onClick="calculation"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/sub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="@drawable/sub"
            android:onClick="calculation"
            app:backgroundTint="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1.125"
        android:background="@color/black"
        android:weightSum="4">

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:foreground="@drawable/one"
            android:onClick="calculation"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:foreground="@drawable/two"
            android:onClick="calculation"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:foreground="@drawable/three"
            android:onClick="calculation"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/sum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="@drawable/plus"
            android:onClick="calculation"
            app:backgroundTint="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginBottom="10sp"
        android:layout_weight="1.125"
        android:background="@color/black"
        android:weightSum="4">

        <Button
            android:id="@+id/sumsub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:foreground="@drawable/sumsub"
            android:onClick="calculation"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:foreground="@drawable/zero"
            android:onClick="calculation"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:foreground="@drawable/dot"
            android:onClick="calculation"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/ans"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="@drawable/ans"
            android:onClick="calculation"
            app:backgroundTint="#000000"
            app:iconSize="120dp" />
    </LinearLayout>

</LinearLayout>